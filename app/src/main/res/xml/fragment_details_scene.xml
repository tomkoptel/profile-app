<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="@android:integer/config_shortAnimTime">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/pageContent" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/heroCarousel">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/favorite">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="?attr/colorPrimary" />
            <CustomAttribute
                app:attributeName="elevation"
                app:customDimension="4dp" />
        </Constraint>

        <Constraint android:id="@+id/appBar">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/transparent" />
            <CustomAttribute
                app:attributeName="elevation"
                app:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@+id/title"/>

        <Constraint android:id="@id/buttonControl">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/heroCarousel">
            <Layout
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint
            android:id="@+id/pageContent"
            app:layout_constraintBottom_toTopOf="@+id/buttonControl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <Constraint android:id="@+id/appBar">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="?attr/colorPrimary" />
            <CustomAttribute
                app:attributeName="elevation"
                app:customDimension="4dp" />
        </Constraint>

        <Constraint
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/appBar"
            app:layout_constraintBottom_toBottomOf="@+id/appBar"
            app:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@android:color/transparent" />
            <CustomAttribute
                app:attributeName="elevation"
                app:customDimension="4dp" />
        </Constraint>

        <Constraint android:id="@+id/title">
            <PropertySet android:alpha="1" />
            <CustomAttribute
                app:attributeName="elevation"
                app:customDimension="4dp" />
        </Constraint>

        <Constraint android:id="@id/buttonControl">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
