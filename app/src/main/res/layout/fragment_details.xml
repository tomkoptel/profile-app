<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_details_scene"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/heroCarousel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:minHeight="200dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pageContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/buttonControl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroCarousel"
        tools:listitem="@layout/item_content" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?homeAsUpIndicator" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/title"
        style="?attr/titleTextAppearance"
        android:layout_marginStart="@dimen/common_page_margin"
        android:layout_marginEnd="@dimen/common_page_margin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:alpha="0"
        android:text="@string/title_of_page"
        app:layout_constraintBottom_toBottomOf="@+id/appBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appBar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginEnd="@dimen/common_page_margin"
        app:cardCornerRadius="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="@+id/heroCarousel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroCarousel">

        <CheckBox
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:button="@drawable/favorite_selector"
            android:text="@null" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/buttonControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/top_border"
        android:theme="@style/Theme.MaterialComponents"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_page_margin"
            android:layout_marginEnd="@dimen/common_page_margin"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/show_card" />
    </FrameLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>
