<resources>
    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>

        <item name="colorPrimary">@color/grey_light</item>
        <item name="colorPrimaryDark">@color/grey_light</item>

        <item name="colorSecondary">@color/brand1_light</item>
        <item name="colorSecondaryVariant">@color/brand1_dark</item>

        <item name="android:textColorPrimary">@color/brand2_light</item>
        <item name="android:textColorSecondary">@color/brand3_light</item>

        <item name="toolbarStyle">@style/Widget.CustomTheme.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.CustomTheme.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:paddingLeft">12dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.ConsolidationTheme.Toolbar.Button.Navigation" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">24dp</item>
    </style>
</resources>
